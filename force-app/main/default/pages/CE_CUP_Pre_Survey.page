                }
            });
            
            $("#functionality").change(function(){ 
                var value = $(this).val();
                if (value.includes("Other")) {
                    $("#functionalityOther").prop("disabled",false);
                } else {
                    $("#functionalityOther").prop("disabled",true);
                }
            });
            
            $(".validate").on("blur keyup change", function(){
                var count = 0;
                
                $("#requiredFieldsPending1").empty();
                $(".validate").each(function(){
                    if ($(this).val() == null || $(this).val() == "") {
                        count++;
                        
                        $("#requiredFieldsPending1").append($("label[for='"+this.id+"']").text() + "<br />");
                    }
                });
                if (count == 0) {
                    $("#requiredFieldsPending").hide();
                    $("#requiredFieldsPending1").hide();
                    $("#surveySubmit").prop("disabled",false);
                }
            });
            
            function isEmail(email) {
                var emailValue = document.getElementById(email).value;
                var regex = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,6})?$/;
                console.log(emailValue);
                console.log(regex.test(emailValue));
                if (!regex.test(emailValue)) { 
                    document.getElementById('emailfail').style.display = 'inline-block';
                    document.getElementById(email).focus(); 
                } else {
                    document.getElementById('emailfail').style.display = 'none';
                }  
            }
            
            function isZip(zip) {
                var zipValue = document.getElementById(zip).value;
                var regex = /(\d{5}([\-]\d{4})?)/;
                console.log(zipValue);
                console.log(regex.test(zipValue));
                if (!regex.test(zipValue)) { 
                    document.getElementById('zipfail').style.display = 'inline-block';
                    document.getElementById(zip).focus(); 
                } else {
                    document.getElementById('zipfail').style.display = 'none';
                }  
            }

            
            function trimStr(str) {
                var trimmedStr = str.toString();
                console.log(trimmedStr);
                trimmedStr = trimmedStr.replace(/,/g,";");
                console.log(trimmedStr);
                return trimmedStr;
            }
            
            var surveyResponseId;
            
            function question(){
              this.Question_Number__c = null; 
              this.Question__c = null;
              this.Response__c = null;
          }
            
            $("#surveySubmit").click(function() {
                var surveyId = 'a2HL0000000KosDMAS'; //"{!$CurrentPage.Parameters.surveyId}"; 
                var c_email = $("#email").val();
                var objList = [];
                var reponseItems;
                
                $(".sri").each(function(){
                    var qN = $(this).data("q-n");
                    var qT = $(this).data("q-t");
                    var qR = $(this).val();
                    
                    var q = new question();
                    q.Question_Number__c = qN;
                    q.Question__c = qT;
                    q.Response__c = qR.toString();

                    objList.push(q);
                    responseItems = JSON.stringify(objList);
                });
                
                console.log(responseItems);
                              
                Survey_ControllerExtension.createSurveyResponse( 
                    surveyId,
                    c_email,
                    objList,
                    function(results, event) {
                        console.log(results);
                        surveyResponseId = results.Id;
