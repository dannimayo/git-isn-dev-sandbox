                    <script>
                    
                    $("#phone").keypress(function (e) {
                    if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                        return false;
                    }
                    var curchr = this.value.length;
                    var curval = $(this).val();
                    if (curchr == 3) {
                        $(this).val("(" + curval + ") ");
                    } else if (curchr == 9) {
                        $(this).val(curval + "-");
                    }
                    $(this).attr('maxlength', '14');
                    console.log($("#phone").val());
                });
            
            var requiredFieldsMissing;
            
            $("#dietaryRestriction").change(function(){ 
                var value = $(this).val();
                if (value.includes("Yes")) {
                    $("#dietaryRestrictionNotes").prop("disabled",false);
                } else {
                    $("#dietaryRestrictionNotes").prop("disabled",true);
                }
            });
            
            $("#topics").change(function(){ 
                var value = $(this).val();
                if (value.includes("Other")) {
                    $("#topicsOther").prop("disabled",false);
                } else {
