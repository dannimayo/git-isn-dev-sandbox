    <decisions>
        <name>Contact_Found_Check</name>
        <label>Contact Found Check</label>
        <locationX>62</locationX>
        <locationY>294</locationY>
        <defaultConnector>
            <targetReference>Create_New_Contact</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>[Default Outcome]</defaultConnectorLabel>
        <rules>
            <name>Contact_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Contacts</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Contact_Match_Added</targetReference>
            </connector>
            <label>Contact Found</label>
        </rules>
    </decisions>
    <description>Searches for a contact match or allows user to create a new contact.</description>
